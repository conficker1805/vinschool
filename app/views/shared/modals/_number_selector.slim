.modal id="numberModal"
  div.modal-dialog.modal-fullscreen
    div.modal-content
      div.modal-body
        - (1..100).each do |num|
          button.btn.btn-outline-primary.number data-action="click->number-selector#selectNumber" data-number-value=num = num

scss:
  .btn.number {
    height: 40px;
    width: 40px;
    padding: 0px;
    margin-right: 7px;
    margin-bottom: 7px;
  }

